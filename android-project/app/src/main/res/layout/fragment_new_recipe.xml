<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".ui.profile.NewRecipeFragment">

    <!-- EditText for Recipe Name -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Name" />

    <!-- EditText for Recipe Description -->
    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Description"/>

    <!-- EditText for Recipe Image URL -->
    <EditText
        android:id="@+id/editTextThumbnail_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Image URL" />
    <EditText
        android:id="@+id/editTextRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Rating" />

    <!-- Some space before Instruction1 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- EditText for Recipe Instruction1 -->
    <EditText
        android:id="@+id/editTextInstruction1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Instruction1" />

    <!-- EditText for Recipe Instruction2 -->
    <EditText
        android:id="@+id/editTextInstruction2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Instruction2" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="Save" />
</LinearLayout>
